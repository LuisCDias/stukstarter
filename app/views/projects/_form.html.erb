<%= simple_form_for(@project, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name %>
  <%= f.input :short_description %>
  <%= editor 'About this project', 'project[description]','project_description', @project.try(:description) %>
  <%= f.input :goal %>
  <%= f.input :image_url %>
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
